<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_contact_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<include-->
    <!--android:id="@+id/toolbar"-->
    <!--layout="@layout/toolbar" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:gravity="bottom|center">

                <ImageView
                    android:id="@+id/imageIv"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/bird_header" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical">-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Almost Done For"
                        android:textColor="@color/textColorGrey"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_dkd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="OTP Verification"
                        android:textColor="@color/darkPurple"
                        android:textSize="24sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="OTP has been sent to your mobile number"
                        android:textColor="@color/textColorGrey"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/contactTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1234567890"
                        android:textColor="@color/textColorGrey"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <me.philio.pinentry.PinEntryView
                        android:id="@+id/otpPinView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        app:accentType="character"
                        app:accentWidth="1dp"
                        app:digitBackground="@drawable/bg_otp_edittext_selected"
                        app:digitTextColor="@color/textColorGrey"
                        app:digitTextSize="7dp"
                        app:mask=""
                        app:pinAccentColor="@color/textColorGrey" />

                    <!--<LinearLayout-->
                    <!--android:id="@+id/resendOtpLayout"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:orientation="vertical"-->
                    <!--android:padding="5dp">-->

                    <!--<TextView-->
                    <!--android:id="@+id/resendOtpTv"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Resend OTP ?"-->
                    <!--android:textColor="@color/colorPrimary"-->
                    <!--android:textSize="12sp" />-->

                    <!--<View-->
                    <!--android:id="@+id/resendView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0.5dp"-->
                    <!--android:background="@color/colorPrimary" />-->

                    <!--</LinearLayout>-->

                    <TextView
                        android:id="@+id/timerForOtpTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="resend OTP in 00:22 secs"
                        android:textColor="@color/lightGrey"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/proceedBtn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_button"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Verify"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <!--</LinearLayout>-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"></LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/backTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_back_arrow_black"
                android:drawablePadding="10dp"
                android:text="Back"
                android:textColor="@color/textColorGrey"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
