    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/nodataCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/offeram_grey"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/noDataTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Oops! You have not pinged any offers yet. Start sharing offers by Ping An Offer now!"
                android:textColor="@color/textColorGrey"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txt_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PING Now"
                android:textColor="@color/white"
                android:background="@drawable/bg_dialog_button"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>